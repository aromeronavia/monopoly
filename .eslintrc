{
    "extends": "airbnb",
    "env": {
        "browser": true,
        "node": true
    },
    "globals": {
        "expect": true,
        "describe": true,
        "it": true
    },
    "rules": {
        "comma-dangle": "off",
        "arrow-parens": ["error", "as-needed"],
        "no-unused-expressions": "off",
        "class-methods-use-this": "off"
    }
}
